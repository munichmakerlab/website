---
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.vue';

const { frontmatter } = Astro.props;
const currentLocale = Astro.currentLocale ?? 'en';
---

<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Mumalab" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Munich Maker Lab" />
    <meta property="og:url" content="https://munichmakerlab.de" />
    <meta property="og:image" content="https://munichmakerlab.de/web-app-manifest-512x512.png" />
    <meta
      property="og:description"
      content="Munich's freshest makerspace! Join us in making and hacking whatever your heart desires."
    />
    <script is:inline>
      (function () {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored ?? (prefersDark ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <Navbar client:only="vue" locale={currentLocale} />
    <Hero
      header_image={frontmatter.header_image}
      headline={frontmatter.headline}
      sub_headline={frontmatter.sub_headline}
    />
    <div class="content">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    color-scheme: light;
    font-family: 'Lora', Arial, Helvetica, sans-serif;
    font-size: 20px;
    --bg: #ffffff;
    --fg: #404040;
    --muted: #666666;
    --card: #f4f4f5;
    --border: #e4e4e7;
    --link: #2563eb;
  }
  :root[data-theme='dark'] {
    color-scheme: dark;
    --bg: #212830;
    --fg: #f0f6fc;
    --muted: #656c76;
    --card: #2d333b;
    --border: #30363d;
    --link: #58a6ff;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg);
    color: var(--fg);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 800;
  }

  a {
    color: var(--fg);
  }
  .content {
    width: 50vw;
    margin: auto;
    margin-top: 5rem;
  }

  @media (max-width: 950px) {
    .content {
      width: 90vw;
    }
    .content img {
      max-width: 100%;
      height: auto;
    }
  }
</style>
